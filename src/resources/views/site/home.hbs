
    <div class="row">
        {{#each products}}
            <div class="card mr-auto mb-4" style="max-width: 540px;">
              <div class="row g-0">
                <div class="col-md-4">
                  <a href="/products/{{this.slug}}">
                    <img src="{{lookup this.images 0}}" class="img-fluid rounded-start" alt="{{this.name}}">
                  </a>
                </div>
                <div class="col-md-8">
                  <div class="card-body">
                    <a href="/products/{{this.slug}}">
                      <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="/products/{{this.slug}}"><button class="btn btn-primary">Xem chi tiáº¿t</button></a>
                  </div>
                </div>
              </div>
            </div>
        {{/each}}
    </div>

    <div id="pagination" class="d-flex align-items-center justify-content-center mt-4">
      <nav aria-label="Page navigation example">
        <ul class="pagination">
          <li class="page-item">
            {{{previousPage currentPage totalPage}}}
          </li>
          
          {{{pagination totalPage}}}

          <li class="page-item">
            {{{nextPage currentPage totalPage}}}
          </li>
        </ul>
      </nav>
    </div>


